{
    "name": "mayursaptal/semantic-kernel-php",
    "description": "PHP implementation of Microsoft's Semantic Kernel framework for orchestrating LLMs, memory, and AI agents",
    "type": "library",
    "license": "MIT",
    "keywords": ["ai", "semantic-kernel", "llm", "microsoft", "machine-learning", "chatgpt", "openai", "php", "artificial-intelligence", "gpt", "azure-openai", "ollama"],
    "homepage": "https://github.com/mayursaptal/semantic-kernel-php",
    "support": {
        "issues": "https://github.com/mayursaptal/semantic-kernel-php/issues",
        "source": "https://github.com/mayursaptal/semantic-kernel-php",
        "docs": "https://github.com/mayursaptal/semantic-kernel-php#readme"
    },
    "authors": [
        {
            "name": "Mayur Saptal",
            "email": "mayursaptal@gmail.com",
            "homepage": "https://github.com/mayursaptal",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.4",
        "psr/log": "^3.0",
        "predis/predis": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "SemanticKernel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SemanticKernel\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --configuration phpunit.xml",
        "test-unit": "./vendor/bin/phpunit --configuration phpunit.xml --testsuite unit",
        "test-integration": "./vendor/bin/phpunit --configuration phpunit.xml --testsuite integration", 
        "test-coverage": "./vendor/bin/phpunit --configuration phpunit.xml --coverage-html coverage/html",
        "test-coverage-text": "./vendor/bin/phpunit --configuration phpunit.xml --coverage-text",
        "test-quick": "php tests/run_all_tests.php",
        "example-basic": "@php examples/01_basic_usage_example.php",
        "example-advanced": "@php examples/02_advanced_features_demo.php",
        "examples": [
            "@example-basic",
            "@example-advanced"
        ],
        "check": [
            "@composer validate --strict",
            "@test"
        ],
        "ci": [
            "@composer validate --strict",
            "@test-coverage-text",
            "@examples"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        },
        "optimize-autoloader": true,
        "platform-check": false
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
